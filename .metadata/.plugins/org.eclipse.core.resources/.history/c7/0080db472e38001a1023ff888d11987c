package com.bridgelabz.logicalprgm;

public class tictoe {

	static void dispBoard() {
		//int count = 0;
	     int player = 0;
		int[][] BOARD = new int[3][3];
		boolean isEmpty = true;

		for (int i = 0; i < BOARD.length; i++) {
			System.out.println("---------------");
			System.out.print("||");
			for (int j = 0; j < BOARD[i].length; j++) {
				if (BOARD[i][j] == 0) {
			//		count++;
					System.out.print(" o |");
				} else if (BOARD[i][j] == 1) {
				//	count++;
					System.out.print(" x |");
				} else
					System.out.print("   |");
			}
			System.out.println("|");
		}
		//if (count == 9) {
			//isEmpty = false;
		//}
		System.out.println("---------------");
	}
		public static void main(String[] args) {
			dispBoard() ;
		}

}
